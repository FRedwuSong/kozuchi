<div class="user_password">
  <table>
    <%= form_input :password_field, "パスワード", "password", :size => 30 %>
    <%= form_input :password_field, "パスワード（確認）", "password_confirmation", :size => 30 %>
    <% if submit %>
      <%= form_input :submit_button, 'パスワード変更' %>
    <% end %>
  </table>
</div>                                                                          