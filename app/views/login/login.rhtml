<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>小槌</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <%= stylesheet_link_tag 'login' %>
  </head>
  <body>
    <!-- header -->
    <div id="login_title">
      <span>Web家計簿</span><br/>
      <span id="application_name">小槌</span>
      <%= image_tag("/images/kozuchi.png", :size => "48x48")%>
    </div>
    <!-- 通信欄-->
    <% if @flash[:notice] %>
      <div id="login_message"><%=@flash[:notice]%></div>
    <% end %>

    <%= form_tag %>
      <div id="login_field">
        <label>ログインID</label>
        <%= text_field("user", "login_id", :size => 10) %>
        <br />
        <label>パスワード</label>
        <%= password_field("user", "password", :size => 10) %>
        <br />
        <button type="submit" id="login_button"><span>ログイン</span></button>
      </div>
    <%=end_form_tag%>

    <!-- footer -->
    <%= render :partial => "shared/footer" %>
  </body>
</html>


