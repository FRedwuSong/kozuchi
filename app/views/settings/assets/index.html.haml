.container-fluid
  %ul.nav.nav-tabs.account_tabs{role: "tablist"}
    %li.active= link_to Account::Asset.human_name, settings_assets_path
    %li= link_to Account::Expense.human_name, settings_expenses_path
    %li= link_to Account::Income.human_name, settings_incomes_path
  .row
    .col-md-9
      .bottom_box
        = form_tag settings_assets_path, method: :put do
          %table.table.accounts
            %tr
              %th= "#{Account::Asset.human_name}名"
              %th 種別
              %th 詳細
              %th 並び順
              %th 変更
              %th 削除
            = render partial: "asset", collection: @accounts
          .operation= link_to "編集を中止して再表示", settings_assets_path

    .col-md-3
      = render :partial => "new_asset_form", :locals => {:path => settings_assets_path, :account_type_name => Account::Asset.human_name}
      = error_messages @account
