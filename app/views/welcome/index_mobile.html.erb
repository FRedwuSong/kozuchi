<% content_for :head do -%>
  <title>Web家計簿 小槌</title>
  <%= stylesheet_link_tag 'welcome' %>
<% end -%>

<div>
  <h1 class="mobile_title">Web家計簿 小槌</h1>
  <% if current_user -%>
    <div class="box">
      <p style="text-align: right;"><%= link_to 'ログアウト', logout_path %></p>
      <p>ようこそ、<%= h current_user.login %>さん！</p>
	   <p style="text-align:center; font-size: 140%;"><%= link_to 'ホームへ',  :controller => 'home' %></p>
    </div>
  <% else -%>
    <%= focus_on('login') %>
    <div id="login_form" class="box">
      <% form_tag login_post_path do -%>
        <div><label for="login"><%= _('Login') %></label>
        <%= text_field_tag 'login', flash[:login] %></div>
         <div><label for="password"><%= _('Password') %></label>
         <%= password_field_tag 'password' %></div>
         <div class="error"><%= flash[:error] %></div>
         <div><%= submit_tag _('Log in'), :onclick => "if ($F('login')=='') {alert('ログインIDを入力してください。'); return false;}if ($F('password')=='') {alert('パスワードを入力してください。'); return false;}" %></div>
      <% end -%>
    </div>
    <% if request.mobile.docomo? %>
      <div style="margin-top: 1em;">
        設定済の方は
        <%= docomo_utn_button_to "簡単ログイン", login_post_path %>
      </div>
    <% end %>
  <% end -%>

</div>