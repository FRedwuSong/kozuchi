<% unless flash[:notice].blank? %>
  <p><%= flash[:notice] %></p>
<% end %>
<% form_tag :controller => "/deals", :action => "create_deal" do %>
  <%= Date.today.to_s(:db) %>
  <%= text_field :deal, :summary, :size => 10 %><br />
  <%= render :partial => 'shared/account_entry_fields' %>
  <%= text_field :deal, :amount, :size => 8 %>円<br />
  <%= submit_tag "記入" %>
<% end %>
<div><%= link_to "HOME", url_for(hash_for_home_path) %></div>