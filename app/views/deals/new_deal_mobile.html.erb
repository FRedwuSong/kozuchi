<% if flash[:saved] %>
  <div style="text-align:right;"><%= today = Date.today; link_to "記入履歴へ", daily_deals_path(:year => today.year, :month => today.month, :day => today.day) %></div>
<% end %>
<% form_tag :controller => "/deals", :action => "create_deal" do %>
  <%= Date.today.to_s(:db) %>
  <%= text_field :deal, :summary, :size => 10 %><br />
  <%= render :partial => 'shared/account_entry_fields' %>
  <%= text_field :deal, :amount, :size => 8 %>円<br />
  <%= submit_tag "記入" %>
<% end %>
