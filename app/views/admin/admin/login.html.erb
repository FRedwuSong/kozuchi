<html>
  <body>
    <% if flash[:notice] %>
      <div><%= flash[:notice]%></div>
    <% end %>
    <% form_tag(:action => 'login') do %>
      <table>
        <tr>
          <td>ID</td><td><%= text_field('admin_user', 'name')%></td>
        </tr>
        <tr>
          <td>パスワード</td><td><%= password_field('admin_user', 'password')%></td>
        </tr>
        <tr>
          <td colspan="2"><%= submit_tag('ログイン') %></td>
      </table>
    <% end  %>
  </body>
</html>