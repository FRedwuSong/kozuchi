<html>
  <head>
    <title>
      <%= controller.title %> - <%= controller.menu_items[controller.action_name] || controller.action_name %> 
    </title>
    <%= stylesheet_link_tag 'book' %>
    <%= javascript_include_tag "prototype" %>
    <%= javascript_include_tag "book" %>
  </head>
  <body>
    <!-- header -->
    <div id="header">
      <div style="float:left;">
        <span id="title"><%= controller.title %></span>
        <span id="subtitle"> - <%= controller.menu_items[controller.action_name] || controller.action_name %></span>
      </div>
      <div id="menu">
        <% if controller.title != "家計簿" %>
          <%= link_to("家計簿", :controller => "book", :action => "deals") %>
        <% end %>
        <% if controller.title != "設定" %>
          <%= link_to("設定", :controller => "config", :action => "index") %>
        <% end %>
        <%= link_to("ログアウト", :controller => "login", :action => "logout") %>
      </div>
      <div class="clearboth"></div>
    </div>
    <div id="sidebar">
      <p class="info">
        <%= session[:user].login_id %>さん<br />
        <%= format_date(Time.now) %>
      </p>
      <!-- menu -->
      <% controller.menu_items.each do |key, val| %>
        <div class="menu"><%= link_to(val, :controller => controller.name, :action => key) %></div>
      <% end %>
    </div>
    <!-- contents -->
    <div id="contents">
      <%= @content_for_layout %>
    </div>
    <!-- footer -->
    <div id="footer">小槌 Ver.0.1.0 (c)2006 Yasuko Ohba All rights reserved.</div>
  </body>
</html>
