<% html_tag do -%>

  <% head_tag 'home' do -%>
  	<title>[小槌] ホーム</title>
	<%= yield :head %>
  <% end -%>
  
  <% body_tag do -%>
    <div id="header">
      <div id="home_icon">
        <%= link_to(image_tag("/images/izumo_kozuchi.png", :border => 0, :width => 32, :height => 32), root_path) %>
      </div>
      <div id="header_title">
        <span class="large"><%= h @user.login %>さんの家計簿</span>
        <span> - ホーム</span>
      </div>
      <%= render :partial => "shared/menu_groups" %>
    </div>

    <%= yield %>
  <% end -%>

<% end -%>